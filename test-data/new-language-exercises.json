    {
      "type": "language_tone_transformer",
      "order": 1,
      "title": "Transform: Casual to Formal",
      "instructions": "Transform the sentence from a casual tone to a formal tone. Consider word choice, sentence structure, and level of politeness.",
      "difficulty": "intermediate",
      "estimatedDuration": 3,
      "content": {
        "originalSentence": "Hey, can you help me with this problem?",
        "originalTone": "casual",
        "targetTone": "formal",
        "correctAnswer": "Would you be so kind as to assist me with this matter?",
        "acceptableAnswers": [
          "Could you please assist me with this issue?",
          "I would appreciate your assistance with this problem.",
          "Would you mind helping me with this matter?"
        ],
        "hints": [
          "Replace 'Hey' with a more formal greeting or remove it",
          "Use 'assist' instead of 'help'",
          "Add polite phrases like 'Would you be so kind' or 'I would appreciate'"
        ],
        "explanation": "Formal tone requires more sophisticated vocabulary, indirect requests, and polite expressions."
      },
      "scoring": {
        "maxPoints": 100,
        "passingScore": 70,
        "weight": 1,
        "allowRetry": true,
        "maxRetries": 3
      }
    },
    {
      "type": "language_tone_transformer",
      "order": 2,
      "title": "Transform: Angry to Diplomatic",
      "instructions": "Rewrite this angry statement in a diplomatic tone while preserving the core message.",
      "difficulty": "advanced",
      "estimatedDuration": 4,
      "content": {
        "originalSentence": "This is completely unacceptable! You never listen to what I say!",
        "originalTone": "angry",
        "targetTone": "diplomatic",
        "correctAnswer": "I feel that my concerns may not have been fully understood. Perhaps we could discuss this matter further?",
        "acceptableAnswers": [
          "I'm concerned that there may be a communication gap between us. Could we address this together?",
          "It seems we might have different perspectives on this. I'd value the opportunity to share my thoughts.",
          "I believe there's been a misunderstanding. Would you be open to hearing my point of view?"
        ],
        "hints": [
          "Use 'I feel' statements instead of 'You never'",
          "Replace accusations with observations",
          "End with a collaborative invitation"
        ],
        "explanation": "Diplomatic tone focuses on feelings, uses softer language, and invites dialogue rather than confrontation."
      },
      "scoring": {
        "maxPoints": 100,
        "passingScore": 70,
        "weight": 1,
        "allowRetry": true,
        "maxRetries": 3
      }
